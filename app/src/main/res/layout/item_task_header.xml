            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/colorWhite"-->
            <!--android:visibility="gone"-->
            <!--ads:adSize="SMART_BANNER"-->
            <!--ads:adUnitId="@string/google_banner_id" />-->

        <!--<ImageButton-->
