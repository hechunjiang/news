    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/news_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/news_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.advert.activity.AdVertyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.home.activity.MainActivity" />
        <activity android:name=".main.news.activity.NewsDetailsActivity" />
        <activity android:name=".main.news.activity.NewsDetailsRvActivity"/>
        <activity android:name=".main.mine.activity.PrivacyActivity" />
        <activity android:name=".main.mine.activity.FindPassActivity" />

        <!-- facebook登录 -->

        <activity android:name=".main.mine.activity.EarnActivity" />
        <activity android:name=".main.web.activity.WebActivity" />
        <activity android:name=".main.web.activity.MyWebActivity">

        </activity>
        <activity android:name=".main.mine.activity.MessageActivity" />
        <activity android:name=".main.mine.activity.FeedbackActivity" />
        <activity android:name=".main.mine.activity.SettingActivity" />
        <activity android:name=".main.mine.activity.PersonActivity" />

    </application>

</manifest>